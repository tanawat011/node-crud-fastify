{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@configs": ["configs"],
      "@constants": ["constants"],
      "@helpers": ["helpers"],
      "@libs": ["libs"],
      "@middlewares": ["middlewares"],
      "@types": ["types"],
      "*": ["node_modules/*", "src/types/*", "public"]
    },
    "typeRoots": ["node_modules/@types", "global.d.ts"]
  },
  "include": ["index.ts", "src/**/*", "global.d.ts"],
  "exclude": ["node_modules", ".eslintrc.js"]
}
